

<div class="topbar-item">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="btn btn-icon btn-icon-mobile w-auto btn-clean d-flex align-items-center btn-lg px-2" >
            <span class="text-muted font-weight-bold font-size-base d-none d-md-inline mr-1">Ola,</span>
            <span class="text-dark-50 font-weight-bolder font-size-base d-none d-md-inline mr-3">@User.Identity.Name</span>
                <span class="symbol-label font-size-h5 font-weight-bold"><a asp-action="Logout" asp-controller="Home">Logout</a></span>
        </div>
    }
    else
    {
        <div class="btn btn-icon btn-icon-mobile w-auto btn-clean d-flex align-items-center btn-lg px-2" >
            <span class="text-muted font-weight-bold font-size-base d-none d-md-inline mr-1">Ola,</span>
            <span class="text-dark-50 font-weight-bolder font-size-base d-none d-md-inline mr-3"><a asp-action="Login" asp-controller="Home">Login</a></span>
        </div>
    }

</div>